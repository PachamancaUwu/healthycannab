@model IEnumerable<healthycannab.Models.Producto>

<style>
.table {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

thead {
    background-color: #343a40;
    color: #ffffff;
}

.btn {
    font-size: 0.9rem;
    font-weight: bold;
}
</style>

<div class="container mt-4">
    <h2 class="mb-4 text-center">Catálogo de Productos</h2>
    <hr>
    </hr>
    <a href="@Url.Action("Create")" class="btn btn-primary mb-3">Agregar Nuevo Producto</a>
    <table class="table table-bordered table-hover text-center align-middle" style="background-color: #f9f9f9; border-radius: 10px;">
        <thead class="thead-dark">
            <tr>
                <th style="vertical-align: middle;">Nombre</th>
                <th style="vertical-align: middle;">Descripción</th>
                <th style="vertical-align: middle;">Precio</th>
                <th style="vertical-align: middle;">Imagen</th>
                <th style="vertical-align: middle;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.Nombre</td>
                    <td>@producto.Descripcion</td>
                    <td>$@producto.Precio</td>
                    <td>
                        <img src="@producto.ImagenUrl" alt="@producto.Nombre" style="width: 50px; height: 50px; object-fit: contain; border-radius: 5px;" />
                    </td>
                    <td>
                        <div class="d-flex justify-content-center gap-2">
                            <a href="@Url.Action("Details", new { id = producto.Id })" class="btn btn-info btn-sm">Detalles</a>
                            <a href="@Url.Action("Edit", new { id = producto.Id })" class="btn btn-warning btn-sm">Editar</a>
                            <a href="@Url.Action("Delete", new { id = producto.Id })" class="btn btn-danger btn-sm">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
