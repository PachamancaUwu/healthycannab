@{
    ViewData["Title"] = "Payment Success";
}

@* Vincula los recursos de Bootstrap (CSS y JS) desde el CDN *@
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-success text-white">
            <h4 class="card-title mb-0">¡Pago Exitoso!</h4>
        </div>
        <div class="card-body">
            <h5 class="text-center text-success">¡Tu pago se ha realizado exitosamente!</h5>
            
            <div class="mt-4">
                <h6 class="fw-bold">Detalles del Pago:</h6>
                <ul class="list-group">
                    <li class="list-group-item"><strong>Payment ID:</strong> @Context.Request.Query["paymentId"]</li>
                    <li class="list-group-item"><strong>Token:</strong> @Context.Request.Query["token"]</li>
                    <li class="list-group-item"><strong>Payer ID:</strong> @Context.Request.Query["PayerID"]</li>
                </ul>
            </div>

        </div>
    </div>
</div>

<style>
    .container {
        max-width: 600px;
    }
    .card {
        border-radius: 15px;
    }
    .card-header {
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }
</style>
